<?xml version='1.0' encoding='utf-8'?>
<widget id="com.xBrowserSync" android-packageName="com.xBrowserSync.android" ios-CFBundleIdentifier="com.xBrowserSync.ios" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>xBrowserSync</name>
    <description>Browser syncing as it should be: secure, anonymous and free!</description>
    <author email="admin@xbrowsersync.org" href="https://www.xbrowsersync.org" />
    <content src="app.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.2" />
    <engine name="ios" spec="~4.2.1" />
</widget>
