{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.1",
  "default_locale": "en",
  "browser_action": {
    "default_icon": {
        "19": "images/browser-action-off.png"
    },
    "default_popup": "app.html",
    "default_title": "__MSG_extName__"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["scripts/content.js"]
  }],
  "permissions": [
    "activeTab",
    "alarms",
    "bookmarks",
    "notifications"
  ]
}