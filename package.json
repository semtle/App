{
  "name": "xbrowsersync-app",
  "description": "The client app component of the xBrowserSync application.",
  "version": "0.1.0",
  "author": "Rich Browne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xBrowserSync/App.git"
  },
  "bugs": {
    "url": "https://github.com/xBrowserSync/App/issues"
  },
  "dependencies": {
    "angular": "1.5.x",
    "angular-animate": "1.5.x",
    "angular-sanitize": "1.5.x",
    "bootstrap": "3.3.x",
    "crypto-js": "3.1.x",
    "font-awesome": "4.6.x",
    "underscore": "1.8.x"
  },
  "devDependencies": {
    "jshint": "2.9.x",
    "npm-build-tools": "2.2.x",
    "node-sass": "3.7.x"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "echo '=> Linting' && jshint .",
    "postlint": "echo '=> Done'",
    
    "prebuild:chrome": "npm run clearprevbuild",
    "clearprevbuild": "n-clean build",
    "postclearprevbuild": "npm run compilecorecss",
    "compilecorecss": "node-sass css/styles.scss css/styles.css -q",
    "build:chrome": "echo '=> Building platform:chrome' && npm run copyplatformfiles -- --source platform/chrome",
    "copyplatformfiles": "n-copy --destination build \"*\" \"**/*\"",
    "postcopyplatformfiles": "npm run copycorefiles",
    "copycorefiles": "n-copy --source . --destination build \"app.html\" \"css/*.css\" \"fonts/*\" \"images/*\" \"scripts/*\"",
    "postcopycorefiles": "npm run copycorefonts",
    "copycorefonts": "n-copy --source fonts --destination build/fonts \"**/*\"",
    "postcopycorefonts": "npm run copynodemodulesscripts",
    "copynodemodulesscripts": "n-copy --source node_modules --destination build/scripts \"angular*/*.min.js\" \"underscore/underscore-min.js\" \"crypto-js/crypto-js.js\"",
    "postcopynodemodulesscripts": "npm run copynodemodulescss",
    "copynodemodulescss": "n-copy --source node_modules --destination build/css \"bootstrap/dist/css/bootstrap.min.css\" \"font-awesome/css/font-awesome.min.css\"",
    "postcopynodemodulescss": "npm run copynodemodulesfonts",
    "copynodemodulesfonts": "n-copy --source node_modules --destination build/fonts \"font-awesome/fonts/*\"",
    "postcopynodemodulesfonts": "npm run compileplatformcss",
    "compileplatformcss": "node-sass build/css/platform.scss build/css/platform.css -q",
    "postcompileplatformcss": "npm run removescssfiles",
    "removescssfiles": "n-clean build/css/*.scss",
    "postremovescssfiles": "echo '=> Done'"
  }
}
